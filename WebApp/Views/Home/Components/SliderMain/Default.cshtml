
@using Site.Models;
@model IEnumerable<SliderMain>
@{
	int activaScript = 0;
}

<div id="slider-main">Slider Main
@foreach( var item in Model)
{
	if (item.SliderMain_Estado != 0)
	{
		activaScript = 1;
		<div id="slider-item"  >
			<div>
			   <img id="img_slider" />
			   @if (item.SliderMain_Titulo.Length > 0)
			   {
			    <p>@item.SliderMain_Titulo</p>	
			   }
			   @if (item.SliderMain_Descripcion.Length > 0)
			   {
			   	<p>@item.SliderMain_Descripcion</p>
			   }
		       <div id="File_Base64" data-base64="@item.File_Base64T"></div>
			</div>
		</div>
	}
}
</div>
<style>
	#slider-main {
	width : 100%;
	height : 400px;
	border:1px solid black;
	}

	#slider-item {
		width: 100%;
		height: 100%;
		cursor:pointer;
	}

</style>
@if (activaScript == 1)
{
	<script>
		var baseStr64 = $('#File_Base64').data("base64");
		var img_slider = document.getElementById('img_slider');
		img_slider.setAttribute('src', "data:image/jpg;base64," + baseStr64);
		if (baseStr64.length >0){
		console.log("Base 64 leido con exito");
		}
	</script>
}

