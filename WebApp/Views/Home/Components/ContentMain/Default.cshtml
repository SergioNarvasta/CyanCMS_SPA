
@using Site.Models;
@model IEnumerable<ContentMain>

<div id="content_main">
@foreach( var item in Model)
{
	if (item.ContentMain_Estado != 0)
	{
		<div id="contentmain_item" class="me-2">
			<div>
			   <img id="content_img" src="data:image/jpg;base64,@item.File_Base64"/>
			   @if (item.ContentMain_Titulo.Length > 0)
			   {
			    <p>@item.ContentMain_Titulo</p>	
			   }
			   @*if (item.ContentMain_Descripcion.Length > 0)
			   {
			   	<p>@item.ContentMain_Descripcion</p>
			   }*@
			</div>
		</div>
	}
}
</div>
<style>
	#content_main {
	display: flex;
    flex-wrap: wrap;
	width : 50%;
	height : 320px;
	margin-left:10%;
	margin-top:2%;
	border:1px solid black;
	}

		#content_main > * {
			flex: 1 1 240px;
		}

	#contentmain_item {
		width: 100%;
		height: 160px;
		cursor:pointer;
	}

	#content_img{
	width:240px;
	height:140px;
	}
</style>

