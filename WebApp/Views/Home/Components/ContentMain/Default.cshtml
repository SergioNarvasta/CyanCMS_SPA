
@using Site.Models;
@model IEnumerable<ContentMain>
@{
	int activaScript = 0;
}

<div id="content_main"> Content Main
@foreach( var item in Model)
{
	if (item.ContentMain_Estado != 0)
	{
		activaScript = 1;
		<div id="contentmain_item"  >
			<div>
			   <img id="img_slider" />
			   @if (item.ContentMain_Titulo.Length > 0)
			   {
			    <p>@item.ContentMain_Titulo</p>	
			   }
			   @if (item.ContentMain_Descripcion.Length > 0)
			   {
			   	<p>@item.ContentMain_Descripcion</p>
			   }
		       <div id="File_Base64" data-base64="@item.File_Base64"></div>
			</div>
		</div>
	}
}
</div>
<style>
	#content_main {
	width : 60%;
	height : 300px;
	margin-top:2%;
	border:1px solid black;
	}

	#contentmain_item {
		width: 100%;
		height: 100%;
		cursor:pointer;
	}

</style>
@if (activaScript == 1)
{
	<script>
		var baseStr64 = $('#File_Base64').data("base64");
		var img_slider = document.getElementById('img_slider');
		img_slider.setAttribute('src', "data:image/jpg;base64," + baseStr64);
		if (baseStr64.length >0){
		console.log("Base 64 leido con exito");
		}
	</script>
}

