
@using Site.Models;
@model IEnumerable<SliderSec>
@{
	int activaScript = 0;
}

<div id="slider_sec">Slider Sec
@foreach( var item in Model)
{
  if (item.SliderSec_Estado != 0)
	{
		activaScript = 1;
		<div id="slider_item"  >
			<div>
			   <img id="img_slider" />
					@if (item.SliderSec_Titulo.Length > 0)
			   {
						<p>@item.SliderSec_Titulo</p>
					}
					@if (item.SliderSec_Descripcion.Length > 0)
			   {
						<p>@item.SliderSec_Descripcion</p>
			   }
		       <div id="File_Base64" data-base64="@item.File_Base64"></div>
			</div>
		</div>
	}
}
</div>
<style>
	#slider_sec {
	width : 60%;
	height : 600px;
	border:1px solid black;
	}

	#slider_item {
		width: 100%;
		height: 100%;
		cursor:pointer;
	}

</style>
@if (activaScript == 1)
{
	<script>
		var baseStr64 = $('#File_Base64').data("base64");
		var img_slider = document.getElementById('img_slider');
		img_slider.setAttribute('src', "data:image/jpg;base64," + baseStr64);
		if (baseStr64.length >0){
		console.log("Base 64 leido con exito");
		}
	</script>
}

